{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}
