# ===========================================
# Zk-RWA-Kit Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Network Configuration
MANTLE_SEPOLIA_RPC_URL=https://rpc.sepolia.mantle.xyz
CHAIN_ID=5003

# Deployer/Relayer Private Key (WITHOUT 0x prefix)
# ⚠️ NEVER commit real private keys. Use a dedicated hackathon wallet.
PRIVATE_KEY=your_private_key_here

# Contract Addresses (populated after running: pnpm deploy)
ZK_ORACLE_ADDRESS=
IDENTITY_REGISTRY_ADDRESS=
COMPLIANCE_MODULE_ADDRESS=
RWA_TOKEN_ADDRESS=

# Relayer Configuration
RELAYER_PORT=3001
RELAYER_ADDRESS=

# Mock Bank Configuration  
MOCK_BANK_PORT=3002
MOCK_BANK_URL=https://mock-bank:3002/api/account

# Prover Server Configuration
PROVER_WS_PORT=9816
PROVER_PROXY_PORT=55688

# Frontend Configuration (used during Docker build)
PROVER_PROXY_URL=wss://localhost/prove
RELAYER_URL=http://localhost:3001
CHAIN_EXPLORER_URL=https://sepolia.mantlescan.xyz

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
